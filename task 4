from math import sqrt
n = input()
if n == 'треугольник':
    a = int(input())
    b = int(input())
    c = int(input())
    p = (a+b+c)/2
    print(sqrt(p*(p-a)*(p-b)*(p-c)))
if n == 'круг':
    r = int(input())
    print(3.14*r*r)
if n == 'прямоугольник':
    a = int(input())
    b = int(input())
    print(a * b)
